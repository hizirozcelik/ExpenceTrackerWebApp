@model IEnumerable<ExpenceTrackerWebApp.Models.Expence>

@{
    ViewData["Title"] = "Index";
}

<h1>Expences</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ExpenceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost) CAD
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-12" style="text-align:center">
    <br />
    <span class="h3 text-info">OR</span>
    <br /> <br />
</div>
<div class="col-12 border p-3">
    <table id="DT-load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ExpenceDate</th>
                <th>Cost</th>
                <th>Description</th>
                <th></th>

            </tr>
        </thead>
    </table>
</div>



